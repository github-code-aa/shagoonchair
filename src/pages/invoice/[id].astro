<script define:vars={{ AUTH_CONFIG }}>
  // Reuse the same storage keys from bills.astro for consistency
  const STORAGE_KEYS = {
    INVOICES_DATA: 'bills_invoices_data',
    LAST_UPDATED: 'bills_last_updated',
    CACHE_DURATION: 24 * 60 * 60 * 1000 // 24 hours in milliseconds
  };

  let currentInvoiceId = null;
  let html2pdf = null;

  // Check if bills cache is still valid (reuse existing logic)
  function isBillsCacheValid() {
    const lastUpdated = localStorage.getItem(STORAGE_KEYS.LAST_UPDATED);
    if (!lastUpdated) return false;

    const timeDiff = Date.now() - parseInt(lastUpdated);
    return timeDiff < STORAGE_KEYS.CACHE_DURATION;
  }

  // Find specific invoice in cached bills data
  function findInvoiceInCache(invoiceId) {
    const cachedData = localStorage.getItem(STORAGE_KEYS.INVOICES_DATA);
    if (!cachedData) return null;

    try {
      const parsedData = JSON.parse(cachedData);
      const bills = parsedData.bills || [];

      // Find the specific invoice by ID
      return bills.find(bill => bill.id == invoiceId) || null;
    } catch (error) {
      console.error('Error parsing bills cache:', error);
      return null;
    }
  }

  // Update bills cache with new invoice data
  function updateBillsCacheWithInvoice(invoiceData) {
    const cachedData = localStorage.getItem(STORAGE_KEYS.INVOICES_DATA);

    if (cachedData) {
      try {
        const parsedData = JSON.parse(cachedData);
        const bills = parsedData.bills || [];

        // Find and update the invoice in the bills array
        const invoiceIndex = bills.findIndex(bill => bill.id == invoiceData.id);

        if (invoiceIndex !== -1) {
          // Update existing invoice
          bills[invoiceIndex] = invoiceData;
        } else {
          // Add new invoice to cache
          bills.unshift(invoiceData); // Add to beginning
        }

        // Save updated cache
        const updatedData = {
          ...parsedData,
          bills: bills
        };

        localStorage.setItem(STORAGE_KEYS.INVOICES_DATA, JSON.stringify(updatedData));
        console.log('üîÑ Updated bills cache with invoice data');

      } catch (error) {
        console.error('Error updating bills cache:', error);
      }
    }
  }

  // Refresh function that forces API call for current invoice
  async function refreshInvoice() {
    console.log('üîÑ Refreshing invoice data...');
    if (currentInvoiceId) {
      await loadInvoiceFromAPI(currentInvoiceId);
    } else {
      // Fallback: get ID from URL and refresh
      const urlParts = window.location.pathname.split("/");
      const invoiceId = urlParts[urlParts.length - 1];
      await loadInvoiceFromAPI(invoiceId);
    }
  }

  // Load html2pdf from CDN
  function loadHtml2Pdf() {
    return new Promise((resolve, reject) => {
      if (window.html2pdf) {
        resolve(window.html2pdf);
        return;
      }

      const script = document.createElement('script');
      script.src = 'https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js';
      script.onload = () => {
        html2pdf = window.html2pdf;
        resolve(window.html2pdf);
      };
      script.onerror = () => {
        reject(new Error('Failed to load html2pdf.js from CDN'));
      };
      document.head.appendChild(script);
    });
  }

  // Smart loading function that leverages existing bills cache
  async function loadInvoiceData() {
    try {
      document.getElementById("loadingState").style.display = "block";
      document.getElementById("errorState").style.display = "none";
