    .page-header {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }

    .filters-grid {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .date-range-inputs {
      flex-direction: column;
      gap: 8px;
    }

