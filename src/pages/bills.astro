  }

  .modal-actions .btn {
    min-width: 100px;
  }

  /* Success/Error Message Styles */
  .message-container {
    margin-top: 20px;
    padding: 15px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 10px;
