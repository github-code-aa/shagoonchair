  }

  .modal-close:hover {
    background: #e9ecef;
    color: #495057;
  }

  .modal-body {
    padding: 30px 25px;
    text-align: center;
  }

  .warning-icon {
    font-size: 48px;
    margin-bottom: 15px;
  }

  .modal-body p {
    margin: 0 0 15px 0;
    color: #495057;
    font-size: 16px;
    line-height: 1.5;
  }

  .warning-text {
    color: #e74c3c !important;
    font-size: 14px !important;
    font-weight: 500;
  }

  .modal-actions {
